@model IEnumerable<Covid_19_Tracking.Models.Post>

@{
    ViewBag.Title = "Home Page";
}

@*Jumbotron Section*@

<div class="jumbotron jumbotron-fluid align-text-bottom main-jumbo">
    <div class="col-8 text-left jumbo-heading">
        <h1 class="display-4 text-light mt-5">See the Realtime Worldwide <span style="background-image: linear-gradient(35deg, #fe86a7 0%, #6078EA 100%);-webkit-background-clip: text;-webkit-text-fill-color: transparent;">COVID-19</span> situation!</h1>
        <p class="lead text-light">Coronavirus disease (COVID-19) is an infectious disease caused by a newly discovered coronavirus.</p>
        <a class="btn btn-primary jumbo-section-end-btn" href="@Url.Action("Tracking", "Home")">Cases Detail</a>
    </div>
</div>

@*Symptoms Section*@

<div class="container mt-5">
    <div class="row">
        <div class="col-md col-md-offset text-center mt-5">
            <h2>Corona Virus <span class="linear-heading">SYMPTOMS</span></h2>
            <p>It can take up to 14 days for symptoms of coronavirus to appear. The main symptoms to look out for are:</p>
        </div>
    </div>

    <hr />

